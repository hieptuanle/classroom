{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": "./",
    "module": "CommonJS",
    // "moduleResolution": "Bundler",
    // "module": "NodeNext",
    "moduleResolution": "Node",
    "paths": {
      "@backend/*": ["src/*"],
      "@backend-db/*": ["db/*"],
      "@backend-helpers/*": ["src/helpers/*"],
      "@backend-libs/*": ["src/libs/*"],
      "@backend-routes/*": ["src/routes/*"]
    },
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    // "types": ["vitest/globals"],
    "outDir": "./dist",
    "sourceMap": true,
    // "sourceMap": true,
    "esModuleInterop": true
  }
}
